		android:layout_marginTop="50dp"
		app:lottie_autoPlay="true"
		app:lottie_fileName="school.json"/>
<TextView
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="2022 developed by Lochin"
