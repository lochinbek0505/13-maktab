<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#F6F7FB"
	android:orientation="vertical"
	tools:context=".screen.fragment.AloqaFragment">

	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="180dp"
		android:layout_marginTop="20dp"
		android:backgroundTint="@color/white"
		android:layout_marginBottom="20dp"
		android:layout_marginStart="20dp"
		android:layout_marginEnd="20dp"
		app:cardCornerRadius="20dp"
		app:cardElevation="5dp">

		<ImageView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scaleType="fitXY"
			android:src="@drawable/ic_for_aloqa" />

		<!--				<androidx.constraintlayout.helper.widget.Carousel-->
		<!--					android:layout_width="match_parent"-->
		<!--					android:layout_height="match_parent"-->

	</androidx.cardview.widget.CardView>

	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:layout_marginStart="20dp"
		android:layout_marginTop="10dp"
		android:layout_marginEnd="20dp"
		android:backgroundTint="@color/white"
		app:cardCornerRadius="10dp"
		app:cardElevation="3dp">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<ImageView
				android:layout_width="27dp"
				android:layout_height="27dp"
				android:layout_alignParentStart="true"
				android:layout_centerVertical="true"
				android:layout_marginStart="10dp"
				android:layout_marginTop="10dp"
				android:layout_marginEnd="10dp"
				android:layout_marginBottom="10dp"
				android:src="@drawable/ic_baseline_location_on_24" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:layout_marginStart="85dp"
				android:text="Samarqand viloyati, Qo'shrabot tumani, Qiyqim QFY , 60-uy."
				android:textColor="@color/text"
				android:textSize="14sp" />

			<ImageView
				android:layout_width="27dp"
				android:layout_height="27dp"
				android:layout_alignParentEnd="true"
				android:layout_centerVertical="true"
				android:layout_marginStart="10dp"
				android:layout_marginTop="10dp"
				android:layout_marginEnd="10dp"
				android:layout_marginBottom="10dp"
				android:src="@drawable/ic_baseline_map_24" />

		</RelativeLayout>

		<!--				<androidx.constraintlayout.helper.widget.Carousel-->
		<!--					android:layout_width="match_parent"-->
		<!--					android:layout_height="match_parent"-->

	</androidx.cardview.widget.CardView>

	<androidx.cardview.widget.CardView
		android:id="@+id/aloqa_call"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:layout_marginStart="20dp"
		android:backgroundTint="@color/white"
		android:layout_marginTop="20dp"
		android:layout_marginEnd="20dp"
		app:cardCornerRadius="10dp"
		app:cardElevation="3dp">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<ImageView
				android:layout_width="27dp"
				android:layout_height="27dp"
				android:layout_alignParentStart="true"
				android:layout_centerVertical="true"
				android:layout_marginStart="10dp"
				android:layout_marginTop="10dp"
				android:layout_marginEnd="10dp"
				android:layout_marginBottom="10dp"
				android:src="@drawable/ic_baseline_local_phone_24" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginStart="50dp"
				android:text="+998 (93) 990 30 06"
				android:textColor="@color/text"
				android:textSize="16sp" />

			<ImageView
				android:layout_width="27dp"
				android:layout_height="27dp"
				android:layout_alignParentEnd="true"
				android:layout_centerVertical="true"
				android:layout_marginStart="15dp"
				android:layout_marginTop="15dp"
				android:layout_marginEnd="15dp"
				android:layout_marginBottom="15dp"
				android:src="@drawable/ic_baseline_phone_forwarded_24" />

		</RelativeLayout>

		<!--				<androidx.constraintlayout.helper.widget.Carousel-->
		<!--					android:layout_width="match_parent"-->
		<!--					android:layout_height="match_parent"-->

	</androidx.cardview.widget.CardView>

	<androidx.cardview.widget.CardView
		android:id="@+id/aloqa_mail"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:backgroundTint="@color/white"
		android:layout_marginStart="20dp"
		android:layout_marginTop="20dp"
		android:layout_marginEnd="20dp"
		app:cardCornerRadius="10dp"
		app:cardElevation="3dp">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<ImageView
				android:layout_width="27dp"
				android:layout_height="27dp"
				android:layout_alignParentStart="true"
				android:layout_centerVertical="true"
				android:layout_marginStart="10dp"
				android:layout_marginTop="10dp"
				android:layout_marginEnd="10dp"
				android:layout_marginBottom="10dp"
				android:src="@drawable/ic_baseline_mail_24" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginStart="50dp"
				android:text="urol1980@gmail.com"
				android:textColor="@color/text"
				android:textSize="16sp" />


			<ImageView
				android:layout_width="27dp"
				android:layout_height="27dp"
				android:layout_alignParentEnd="true"
				android:layout_centerVertical="true"
				android:layout_marginStart="15dp"
				android:layout_marginTop="15dp"
				android:layout_marginEnd="15dp"
				android:layout_marginBottom="15dp"
				android:src="@drawable/ic_baseline_mark_email_read_24" />

		</RelativeLayout>

		<!--				<androidx.constraintlayout.helper.widget.Carousel-->
		<!--					android:layout_width="match_parent"-->
		<!--					android:layout_height="match_parent"-->

	</androidx.cardview.widget.CardView>


</LinearLayout>