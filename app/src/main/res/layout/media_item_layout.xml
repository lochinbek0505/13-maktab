<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="250dp"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_margin="15dp"
	app:cardElevation="5dp"
	android:backgroundTint="@color/white"
	app:cardCornerRadius="15dp">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/white">

		<ImageView
			android:id="@+id/iv_mil"
			android:layout_width="match_parent"
			android:layout_height="160dp"
			android:scaleType="fitXY"
			android:src="@drawable/ic_for_aloqa" />

		<TextView
			android:id="@+id/tv_mil_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/iv_mil"
			android:layout_margin="10dp"
			android:layout_marginStart="10dp"
			android:layout_marginTop="10dp"
			android:layout_marginEnd="10dp"
			android:layout_marginBottom="10dp"
			android:ellipsize="end"
			android:maxLines="2"
			android:padding="2dp"
			android:fontFamily="@font/intermedium"
			android:text="holder.itemView.cv_items_layout.startAnimation(AnimationUtils.loadAnimation(holder.itemView.context,R.anim.news_anim1))"
			android:textColor="@color/black"
			android:textSize="15sp" />

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_alignParentBottom="true"
			android:layout_margin="10dp"
			android:gravity="center"
			android:orientation="horizontal">

			<ImageView
				android:layout_width="15dp"
				android:layout_height="15dp"
				android:src="@drawable/ic_baseline_access_time_black" />

			<TextView
				android:id="@+id/tv_mil_data"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="5dp"
				android:layout_marginEnd="10dp"
				android:text="9.16.2022 9:00"
				android:textColor="#403F3F"
				android:textSize="13sp" />
		</LinearLayout>

	</RelativeLayout>

</androidx.cardview.widget.CardView>