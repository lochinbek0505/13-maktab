<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="530dp"
	android:layout_marginStart="25dp"
	android:layout_marginEnd="25dp"
	android:layout_marginTop="15dp"
	android:layout_marginBottom="15dp"
	android:backgroundTint="@color/white"
	app:cardCornerRadius="25dp"
	app:cardElevation="5dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center_horizontal"
		android:orientation="vertical">


		<TextView
			android:id="@+id/tv_ril_lavozim"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="25dp"
			android:layout_marginTop="25dp"
			android:layout_marginEnd="25dp"
			android:layout_marginBottom="10dp"
			android:fontFamily="@font/intermedium"
			android:maxLines="2"
			android:text="Madaniy marifiy ishlar bo'yicha direktor o'rinbosari"
			android:textColor="@color/black"
			android:textSize="17sp" />

		<androidx.cardview.widget.CardView
			android:id="@+id/cv_ril"
			android:layout_width="220dp"
			android:layout_height="230dp"
			android:layout_marginTop="10dp"
			android:gravity="center"
			app:cardCornerRadius="20dp"
			android:orientation="vertical"
			app:cardElevation="5dp">

			<ImageView
				android:id="@+id/iv_ril"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="fitXY"
				android:src="@drawable/ic_xr_m" />


		</androidx.cardview.widget.CardView>

		<TextView
			android:id="@+id/tv_ril_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="20dp"
			android:layout_marginTop="25dp"
			android:layout_marginEnd="20dp"
			android:layout_marginBottom="10dp"
			android:fontFamily="@font/intermedium"
			android:text="Ismoilov Xurshid Do'smurodovich"
			android:textColor="@color/black"
			android:textSize="17sp" />

		<TextView
			android:id="@+id/tv_ril_bio"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_marginStart="20dp"
			android:layout_marginTop="25dp"
			android:layout_marginEnd="20dp"
			android:layout_marginBottom="10dp"
			android:fontFamily="@font/intermedium"
			android:text="1986 - yil 14-avgustda tug'ilgan. Samarqand davlat universitetining fizika fakultetining 2010-yil tugatgan."
			android:textColor="@color/black"
			android:textSize="17sp" />


	</LinearLayout>


</androidx.cardview.widget.CardView>