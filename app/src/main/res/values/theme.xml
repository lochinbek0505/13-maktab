<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Theme.13maktab" parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/purple_500</item>
		<item name="colorPrimaryVariant">@color/purple_700</item>
		<item name="colorOnPrimary">@color/black</item>
		<item name="android:statusBarColor">@color/status</item>
		<item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
		<!-- Secondary brand color. -->

	</style>

	<style name="Theme.13maktab.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="Theme.13maktab.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

	<style name="Theme.13maktab.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

</resources>